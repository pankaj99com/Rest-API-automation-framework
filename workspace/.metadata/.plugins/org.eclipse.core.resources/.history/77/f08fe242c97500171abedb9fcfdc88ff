package demo.pankaj;

public class Recursion {
	public static int fibonacci(int i){
		if(i==0)return 0;//0 1 2 3 5 8 13,here when i=0 we have to print 0
		if(i<=2)return 1;//here when i=1and i=2,we have to print 1
		int fib=fibonacci(i-1)+fibonacci(i-2);//3-1+3-2=2+1=3,4-1+4-2=5,
		return fib;
		}
	public static void main(String[] args){
		int index=0;
		while(index<8)
		{
			System.out.println(fibonacci(index));
			index++;
		}
	}

}
